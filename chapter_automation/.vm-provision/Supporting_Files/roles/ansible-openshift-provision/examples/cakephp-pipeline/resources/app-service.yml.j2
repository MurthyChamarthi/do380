apiVersion: v1
kind: Service
metadata:
  annotations:
    description: Exposes and load balances the application pods
    service.alpha.openshift.io/dependencies: '[{"name": {{database_service_name |to_json}}, "kind": "Service"}]'
  name: {{ app_name |to_json}}
spec:
  ports:
  - name: web
    port: 8080
    targetPort: 8080
  selector:
    name: {{ app_name |to_json}}
